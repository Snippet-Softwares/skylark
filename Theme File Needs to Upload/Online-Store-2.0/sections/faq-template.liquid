<!--Faq Policy area start-->
<div id="section-{{ section.id }}" class="login-register-area pb-100px pt-100px faq-area">
  <div class="container">
    <div class="row">
      <div class="ml-auto mr-auto col-lg-9">
        <div class="checkout-wrapper">
          <div class="inner-descripe" data-aos="fade-up" data-aos-delay="200">
            {% if section.settings.section_title != '' %}
            <h4 class="title"> {{ section.settings.section_title }} </h4>
            {% endif %}
            {% if section.settings.section_content != '' %}
            <p> {{ section.settings.section_content }}.</p>
            {% endif %}
          </div>
          <div id="faq" class="panel-group">
            {%- assign i = 1 -%}
            {%- for block in section.blocks -%}
            {%- case block.type -%}
            {%- when 'faq' -%}

            <div class="panel panel-default single-my-account" data-aos="fade-up" data-aos-delay="200">

              <div class="panel-heading my-account-title">
                <h3 class="panel-title"><a data-bs-toggle="collapse" href="#collapse-{{ i }}" class=" {% unless forloop.first %}collapsed{% endunless %}" aria-expanded="true">{{ block.settings.accordion_title }}</a></h3>
              </div>

              <div id="collapse-{{ i }}" class="panel-collapse collapse {% if forloop.first %}show{% endif %}" data-bs-parent="#faq">
                <div class="panel-body">
                  {{ block.settings.accordion_content }}
                </div>
              </div>

            </div>


            {%- assign i = i | plus: 1 -%}
            {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!--Faq Policy area end-->








{% comment %}




<div class="faq-page" id="section-{{ section.id }}">
  {% if section.settings.section_title != '' %}
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="section-title">
          <h2>{{ section.settings.section_title }}</h2>
        </div>
      </div>
    </div>
  </div>
  <br>
  {% endif %}
  <div class="container">
    <div id="accordion">
      {%- assign i = 1 -%}
      {%- for block in section.blocks -%}
      {%- case block.type -%}
      {%- when 'faq' -%}
      <div class="card">
        <div class="card-header" id="heading-{{ i }}">
          <h5 class="mb-0">
            <button class="btn btn-link {% unless forloop.first %}collapsed{% endunless %}" data-toggle="collapse" data-target="#collapse-{{ i }}" aria-expanded="true" aria-controls="collapse-{{ i }}">
              {{ block.settings.accordion_title }}
            </button>
          </h5>
        </div>
        <div id="collapse-{{ i }}" class="collapse {% if forloop.first %}show{% endif %}" aria-labelledby="heading-{{ i }}" data-parent="#accordion">
          <div class="card-body">
            {{ block.settings.accordion_content }}
          </div>
        </div>
      </div>
      {%- assign i = i | plus: 1 -%}
      {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% endcomment %}

