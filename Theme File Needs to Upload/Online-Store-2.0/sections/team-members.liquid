{%- assign sset = section.settings -%}
{%- if sset.show_team_section -%}
<!--  Start  Team Section    -->
<div class="team-section" id="section-{{ section.id }}">
  {%- if sset.team_title != '' -%}
  <!-- Start Section Content Text Area -->
  <div class="section-title-wrapper" data-aos="fade-up" data-aos-delay="0">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="section-title text-center">
            <h2 class="title">{{ sset.team_title }}</h2>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End Section Content Text Area -->
  {%- endif -%}

  <div class="team-wrapper">
    <div class="container{% if section.settings.fullwidth_on %}-fluid{%endif%}">
      <div class="row">
        {%- for block in section.blocks -%}
        {%- case block.type -%}
        {%- when 'team_member' -%}
        {%- assign bset = block.settings -%}
        <div class="col-lg-{{ sset.member_col_lg }} col-md-{{ sset.member_col_md }} col-sm-{{ sset.member_col_sm }} mb-5">
          <div class="team-single" data-aos="fade-up" data-aos-delay="0">
            <div class="team-img">
              {%- if bset.member_img -%}
              <img class="img-fluid" src="{{ bset.member_img | img_url: 'master' }}" alt="{{ image.alt }}">
              {%- else -%}
              <img class="img-fluid" src="https://via.placeholder.com/200x200" alt="placeholder-img">
              {%- endif -%}
            </div>
            <div class="team-content">
              {%- if bset.member_name != '' -%}
              <h6 class="team-name font--bold mt-5">{{ bset.member_name }}</h6>
              {%- endif -%}
              {%- if bset.member_desig != '' -%}
              <span class="team-title">{{ bset.member_desig }}</span>
              {%- endif -%}

              <ul class="team-social pos-absolute">
                {%- if bset.show_fb -%}
                <li><a href="{{ bset.fb_url }}"><i class="ion-social-facebook"></i></a></li>
                {%- endif -%}
                {%- if bset.show_twitter -%}
                <li><a href="{{ bset.twitter_url }}"><i class="ion-social-twitter"></i></a></li>
                {%- endif -%}
                {%- if bset.show_instagram -%}
                <li><a href="{{ bset.instagram_url }}"><i class="ion-social-instagram"></i></a></li>
                {%- endif -%}
                {%- if bset.show_linkedin -%}
                <li><a href="{{ bset.linkedin_url }}"><i class="ion-social-linkedin"></i></a></li>
                {%- endif -%}
                {%- if bset.show_rss -%}
                <li><a href="{{ bset.rss_url }}"><i class="ion-social-rss"></i></a></li>
                {%- endif -%}
              </ul>
              
            </div>
          </div>
        </div>
		{%- endcase -%}
        {%- endfor -%}
 
      </div>
    </div>
  </div>
</div>
<!--   End  Team Section   -->
{%- endif -%}



