<!--  Blog area Start -->
<div id="section-{{ section.id }}" class="main-blog-area pb-100px">
  <div class="container">
    <!-- section title start -->
    {% if section.settings.section_title != '' %}
    <div class="row">
      <div class="col-md-12" data-aos="fade-up">
        <div class="section-title text-center mb-11">
          <h2 class="title">{{ section.settings.section_title }}</h2>
          {% if section.settings.section_sub_title != '' %}
          <p class="sub-title">{{ section.settings.section_sub_title }}</p>
          {% endif %}
        </div>
      </div>
    </div>
    {% endif %}

    <!-- section title start -->
    <div class="blog-slider swiper-container slider-nav-style-1" data-aos="fade-up" data-aos-delay="200">
      <!-- Start single blog -->
      <div class="swiper-wrapper">
        <!-- product-item start -->
        {% assign blog = blogs[section.settings.blog_handle] %}
        {% assign blog_limit = section.settings.blog_limit_handle %}

        {%- if blog == empty -%}
        {% for i in (1..blog_limit) %}
        <div class="col-lg-{{ section.settings.blog_column }} col-md-{{ section.settings.blog_column_md }} col-{{ section.settings.blog_column_xs }}">
          <div>
            <h6>
              Blog Post Title
            </h6>
            <div class="">
              <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>
            </div>
          </div>
        </div>
        {% endfor %}
        {%- else -%}
        {% for article in blog.articles limit: blog_limit %}
        <div class="single-blog swiper-slide">
          {% render 'blog-grid-item' with article as article %}
        </div>
        <!-- End single blog -->
        {% endfor %}
        {%- endif -%}
      </div>
      <!-- Add Arrows -->
      <div class="swiper-buttons">
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
      </div>
    </div>
  </div>
</div>
<!--  Blog area End -->

{%- comment -%}
