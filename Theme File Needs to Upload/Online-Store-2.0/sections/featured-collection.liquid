<!-- New Product Start -->
<div id="section-{{ section.id }}" class="section pb-100px">
  <div class="container{% if section.settings.fullwidth_on %}-fluid{% endif %}">
    {% if section.settings.section_title != '' %}
    <div class="row">
      <div class="col-md-12" data-aos="fade-up">
        <div class="section-title text-center mb-11">
          <h2 class="title">{{ section.settings.section_title }}</h2>
          {% if section.settings.section_sub_title != '' %}
          <p class="sub-title">{{ section.settings.section_sub_title }}</p>
          {% endif %}
        </div>
      </div>
    </div>
    {% endif %}
    <div class="new-product-slider swiper-container slider-nav-style-1" data-aos="fade-up" data-aos-delay="200">
      <div class="new-product-wrapper swiper-wrapper">
        <!-- product-item start -->
        {% assign featured_product = collections[section.settings.featured_product_handle] %}
        {% assign featured_product_limit = section.settings.featured_product_limit_handle %}

        {%- if featured_product == empty -%}
        {% assign a = 1 %}
        {% for i in (1..featured_product_limit) %}

        {% assign product_item = "product-" | append: a  %}
        {% assign a = a | plus: 1 %}
        <div class="new-product-item swiper-slide" style="margin-bottom: 30px;">
          <div>
            <div>
              {{ product_item | placeholder_svg_tag: 'product-svg-image' }}
            </div>
            <h6>
              Product Title
            </h6>
            <div class="">
              <span>$99.99</span>
            </div>
          </div>
        </div>
        {% if a == 7 %}
        {% assign a = 1 %}
        {% endif %}
        {% endfor %}
        {%- else -%}
        {% for product in featured_product.products limit: featured_product_limit %}
        <!-- Single Prodect -->
        <div class="new-product-item swiper-slide">
          {%- render 'product-grid-item' with product as product -%}
        </div>
        {% endfor %}
        {%- endif -%}
      </div>
      <!-- Add Arrows -->
      <div class="swiper-buttons">
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
      </div>
    </div>
  </div>
</div>
<!-- New Product End -->


<script>
  /*---------------------
        New Product Slider
     ---------------------- */

    var productSlider = new Swiper('.new-product-slider.swiper-container', {
        slidesPerView: {{ section.settings.product_column }},
        spaceBetween: 30,
        speed: 1500,
        loop: true,

        // Navigation arrows

        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },

        breakpoints: {
            0: {
                slidesPerView: 1,
            },
            478: {
                slidesPerView: {{ section.settings.product_column_xs }},
            },
            576: {
                slidesPerView: 2,
            },
            768: {
                slidesPerView: {{ section.settings.product_column_sm }},
            },
            992: {
                slidesPerView: {{ section.settings.product_column_md }},
            },
            1200: {
                slidesPerView: {{ section.settings.product_column }},
            },
        },
    });
</script>



