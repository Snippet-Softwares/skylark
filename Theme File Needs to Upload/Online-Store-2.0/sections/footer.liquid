    color: {{ section.settings.newsletter_btn_color }};
    background-color: {{ section.settings.newsletter_btn_bg_color }};
    border-color: {{ section.settings.newsletter_btn_bc_color }};
  }
  .btn-primary:hover {
    color: {{ section.settings.newsletter_btn_color_hov }};
    background-color: {{ section.settings.newsletter_btn_bg_color_hov }};
    border-color: {{ section.settings.newsletter_btn_bc_color_hov }};
  }
  .footer-area {
    background: {{ section.settings.footer_bg_color }};
  }
  .footer-bottom {
    background: {{ section.settings.copyright_bg_color }};
  }  



{% endif %}
