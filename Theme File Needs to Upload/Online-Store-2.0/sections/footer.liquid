<!-- Footer Area Start -->
<div class="footer-area" id="section-{{ section.id }}">
  <div class="footer-container">
    <div class="footer-top">
      <div class="container{% if section.settings.fullwidth_on %}-fluid{%endif%}">
        <div class="row">
          {% for block in section.blocks %}
          {% case block.type %}
          {% when 'about_us' %}
          <!-- Start single blog -->
          <div class="col-lg-{{ block.settings.about_info_col_lg }} col-md-{{ block.settings.about_info_col_md }} col-sm-{{ block.settings.about_info_col_sm }} mb-md-30px mb-lm-30px" data-aos="fade-up" data-aos-delay="200">
            <div class="single-wedge">
              {% if block.settings.widget_title != '' %}
              <h4 class="footer-herading">{{ block.settings.widget_title }}</h4>
              {% endif %}
              {% if block.settings.about_content != '' %}
              <p class="about-text">{{ block.settings.about_content }}</p>
              {% endif %}
              {% if block.settings.footer_social_enable %}
              <ul class="link-follow">
                {% if block.settings.social_icon_1_name != blank %}
                <li class="li"><a href="{{ block.settings.social_icon_1_link }}"><i class="{{ block.settings.social_icon_1_name }}"></i></a></li>
                {% endif %}
                {% if block.settings.social_icon_2_name != blank %}
                <li class="li"><a href="{{ block.settings.social_icon_2_link }}"><i class="{{ block.settings.social_icon_2_name }}"></i></a></li>
                {% endif %}
                {% if block.settings.social_icon_3_name != blank %}
                <li class="li"><a href="{{ block.settings.social_icon_3_link }}"><i class="{{ block.settings.social_icon_3_name }}"></i></a></li>
                {% endif %}
                {% if block.settings.social_icon_4_name != blank %}
                <li class="li"><a href="{{ block.settings.social_icon_4_link }}"><i class="{{ block.settings.social_icon_4_name }}"></i></a></li>
                {% endif %}
                {% if block.settings.social_icon_5_name != blank %}
                <li class="li"><a href="{{ block.settings.social_icon_5_link }}"><i class="{{ block.settings.social_icon_5_name }}"></i></a></li>
                {% endif %}
                {% if block.settings.social_icon_6_name != blank %}
                <li class="li"><a href="{{ block.settings.social_icon_6_link }}"><i class="{{ block.settings.social_icon_6_name }}"></i></a></li>
                {% endif %}
                {% if block.settings.social_icon_7_name != blank %}
                <li class="li"><a href="{{ block.settings.social_icon_7_link }}"><i class="{{ block.settings.social_icon_7_name }}"></i></a></li>
                {% endif %}
              </ul>
			  {% endif %}
            </div>
          </div>
          <!-- End single blog -->
          {% when 'footer_menu' %}
          <!-- Start single blog -->
          <div class="col-lg-{{ block.settings.menu_col_lg }} col-md-{{ block.settings.menu_col_md }} col-sm-{{ block.settings.menu_col_sm }} mb-md-30px mb-lm-30px" data-aos="fade-up" data-aos-delay="400">
            <div class="single-wedge">
              {% if block.settings.footer_menu_title != '' %}
              <h4 class="footer-herading">{{ block.settings.footer_menu_title }}</h4>
              {% endif %}
              <div class="footer-links">
                <div class="footer-row">
                  <ul class="align-items-center">
                    {% assign footer_menu = block.settings.footer_menu_handle %}
                    {% for link in linklists[footer_menu].links %}
                    <li class="li"><a class="single-link" href="{{ link.url }}">{{ link.title }}</a></li>
                    {% endfor %}
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <!-- End single blog -->
          {% when 'newsletter' %}
          <!-- Start single blog -->
          <div class="col-md-{{ block.settings.newsletter_col_md }} col-lg-{{ block.settings.newsletter_col_lg }}" data-aos="fade-up" data-aos-delay="800">
            <div class="single-wedge">
              {% if block.settings.newsletter_title != '' %}
              <h4 class="footer-herading">{{ block.settings.newsletter_title }}</h4>
              {% endif %}
              <div class="footer-links">
                {%- if settings.newsletter_system == 'by_shopify_form' -%}
                {%- assign formId = 'Contact_' | append: section.id -%}
                {%- form 'customer', id: formId -%}
                {%- if form.posted_successfully? -%}
                <p class="form-message form-message--success form-success">{{ 'general.newsletter_form.confirmation'| t }}</p>
                {%- else -%}
                {%- if form.errors -%}
                <div class="form-message form-message--error">
                  {{ form.errors | default_errors }}
                </div>
                {%- endif -%}
                <div class="subscribe-form mc_embed_signup">
                  <div id="mc_embed_signup_scroll" class="mc-form">
                    <input type="hidden" name="contact[tags]" value="newsletter">
                    <input class="email" type="email" name="contact[email]" id="Email" value="{% if customer %}{{ customer.email }}{% endif %}"
                           placeholder="{{ block.settings.email_placeholder }}" aria-label="{{ block.settings.email_placeholder }}" {% if form.errors %}aria-invalid="true"{% endif %} autocorrect="off" autocapitalize="off">
                    <button id="Subscribe" type="submit" name="commit" class="button btn-primary"><i class="icon-cursor"></i>{{ block.settings.button_title }}</button>
                  </div>
                </div>
                {%- endif -%}
                {%- endform -%}      
                {%- elsif settings.newsletter_system == 'by_mailchimp' -%}
                <div id="mc_embed_signup" class="newsletter-form mc_embed_signup">
                  <form action="{{ settings.newsletter_action }}" method="post" id="mc-form" name="mc-embedded-subscribe-form" class="validate newsletter-form validate" target="_blank" novalidate>
                    <div id="mc_embed_signup_scroll" class="mc-form">
                      <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="{{ block.settings.email_placeholder }}" required>
                      <button id="mc-embedded-subscribe" type="submit" name="subscribe" class="button btn-primary"><i class="icon-cursor"></i>{{ block.settings.button_title }}</button>
                    </div>
                  </form> 
                  <div class="mailchimp-alerts">
                    <div class="mailchimp-submitting"></div>
                    <div class="mailchimp-success"></div>
                    <div class="mailchimp-error"></div>
                  </div>
                </div>
                {%- endif -%}
              </div>
            </div>
          </div>
          <!-- End single blog -->
          {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
    <div class="footer-bottom">
      <div class="container">
        <div class="row flex-sm-row-reverse">
          {% if section.settings.payment_icon_enable %}
          <div class="col-md-6 text-right">
            <div class="payment-link">
